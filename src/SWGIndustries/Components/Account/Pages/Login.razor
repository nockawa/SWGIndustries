@page "/Account/Login"

<h3>Login</h3>

<form class="form-horizontal" action="Account/PerformExternalLogin" method="post">
    <div>
        <AntiforgeryToken/>
        <input type="hidden" name="ReturnUrl" value="@ReturnUrl"/>
        <p>
            <button type="submit" class="btn btn-primary" name="provider" value="Discord" title="Log in using your Discord account">Discord</button>
            <button type="submit" class="btn btn-primary" name="provider" value="Google" title="Log in using your Google account">Google</button>
        </p>
    </div>
</form>

@code {
    [SupplyParameterFromQuery] private string ReturnUrl { get; set; }
}